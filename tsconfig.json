{
	"extends": "@smol-code/tsconfig",
	"compilerOptions": {
		"outDir": "./build",
		"baseUrl": "./src",
		"skipLibCheck": true,
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"types": [
			"node"
		],
		"typeRoots": [
			"./types"
		],
		"paths": {
			"@root/*": ["../*"],
			"@config": ["config/index.ts"],
			"@config/*": ["config/*"],
			"@events/*": ["config/*"],
			"@util/*": ["util/*"],
			"@Revolt": ["main.ts"],
		}
	},
	"include": [
		"**/*"
	]
}